{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["DOM", "ESNext"],
    "module": "ES2015",

    "allowJs": true,
    "checkJs": true,
    "declaration": false,
    "declarationMap": false,
    "jsx": "preserve",
    "sourceMap": false,

    "outDir": "../lib",
    "rootDir": ".",

    "composite": false,
    "noEmit": true,
    "emitDeclarationOnly": false,
    "isolatedModules": true,

    "strict": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "esModuleInterop": true,
    "moduleResolution": "node",

    "baseUrl": "../",
    "paths": {},

    "typeRoots": null
  },
  "files": ["index.ts"],
  "include": [],
  "exclude": ["../node_modules", "../src/__tests__", "../lib"]
}
