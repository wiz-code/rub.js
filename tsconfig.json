{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["DOM", "ESNext"],
    "module": "ES2015",

    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "jsx": "preserve",
    "sourceMap": true,

    "outDir": "./lib",
    "rootDir": "./src",

    "composite": false,
    "noEmit": false,

    "strict": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "esModuleInterop": true,
    "moduleResolution": "node",

    "baseUrl": ".",
    "paths": {}
  },
  "files": ["./src/index.ts"],
  "include": [],
  "exclude": [
    "./node_modules",
    "./src/__tests__",
    "./lib"
  ]
}
